{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", "replacements:all", "github>form8ion/renovate-config:js-replacements"],
  "automerge": true,
  "platformAutomerge": true,
  "lockFileMaintenance": {
    "enabled": true,
    "automergeType": "branch"
  },
  "packageRules": [
    {
      "depTypeList": ["action"],
      "semanticCommitType": "ci",
      "semanticCommitScope": "action"
    },
    {
      "matchDatasources": ["docker"],
      "semanticCommitType": "ci",
      "matchPackageNames": ["node"],
      "versionsing": "node"
    }
  ],
  "replacement": {
    "automerge": false
  }
}
