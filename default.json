{
  "extends": ["config:base", "replacements:all"],
  "automerge": true,
  "lockFileMaintenance": {
    "enabled": true,
    "automergeType": "branch"
  },
  "packageRules": [
    {
      "depTypeList": ["action"],
      "semanticCommitType": "ci",
      "semanticCommitScope": "action"
    },
    {
      "matchDatasources": ["docker"],
      "semanticCommitType": "ci",
      "matchPackageNames": ["node"],
      "versionsing": "node"
    }
  ]
}
