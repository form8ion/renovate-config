{
  "name": "renovate-config",
  "description": "shareable configs for use with renovate",
  "license": "MIT",
  "private": true,
  "repository": "form8ion/renovate-config",
  "bugs": "https://github.com/form8ion/renovate-config/issues",
  "homepage": "https://github.com/form8ion/renovate-config#readme",
  "author": "Matt Travi <npm@travi.org> (https://matt.travi.org/)",
  "scripts": {
    "test": "npm-run-all --print-label --parallel lint:*",
    "lint:lockfile": "lockfile-lint --path package-lock.json --type npm --validate-https --allowed-hosts npm",
    "lint:md": "remark . --frail",
    "generate:md": "remark . --output",
    "lint:sensitive": "ban",
    "lint:peer": "npm ls >/dev/null",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@form8ion/commitlint-config": "1.0.51",
    "@form8ion/remark-lint-preset": "5.0.9",
    "ban-sensitive-files": "1.9.19",
    "cz-conventional-changelog": "3.3.0",
    "husky": "8.0.3",
    "lockfile-lint": "4.10.5",
    "npm-run-all": "4.1.5",
    "remark-cli": "11.0.0",
    "remark-toc": "8.0.1"
  },
  "dependencies": {}
}
